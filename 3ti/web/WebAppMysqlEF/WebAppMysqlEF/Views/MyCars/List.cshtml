@model List<Car>
@{
}
<h2>Lista samochodów</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Lp</th>
        <th>Nazwa</th>
        <th>Opis</th>
        <th>Cena</th>
        <th>Rok produkcji</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @{ int i = 0;}
    @foreach (var car in Model) {
        i++;
        <tr>
            <td>@i</td>
            <td>@car.Name</td>
            <td>@car.Description</td>
            <td>@car.Price zł</td>
            <td>@car.Year</td>
            <td><a asp-route-id="@car.Id" asp-action="Delete" 
                   class="btn btn-danger">Usuń</a></td>
        </tr>
    }
    </tbody>
</table>