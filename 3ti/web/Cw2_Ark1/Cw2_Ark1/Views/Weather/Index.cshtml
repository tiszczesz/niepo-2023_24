@model List<WeatherModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Prognoza pogody Poznań</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<section id="baner1">
    <p>maj, 2019 r.</p>
</section>
<section id="baner2">
    <h2>Prognoza dla Poznania</h2>
</section>
<section id="baner3">
    <img src="~/media/logo.png" alt="prognoza" />
</section>
<div id="lewy">
    <a href="~/kwerendy.txt">Kwerendy</a>
</div>
<div id="prawy">
    <img src="~/media/obraz.jpg" alt="Polska, Poznań" />
</div>
<section id="glowny">
    <table>
        <tr>
            <th>Lp.</th>
            <th>DATA</th>
            <th>NOC - TEMPERATURA</th>
            <th>DZIEŃ - TEMPERATURA</th>
            <th>OPADY [mm/h]</th>
            <th>CIŚNIENIE [hPa]</th>
        </tr>
        @{ int lp = 0;}
       @foreach (var row in Model) {
           lp++;
           <tr>
               <td>@lp</td>
               <td>@row.DateWeather.ToShortDateString()</td>
               <td>@row.TempNight</td>
               <td>@row.TempDay</td>
               <td>@row.RainFall</td>
               <td>@row.Pressure</td>
           </tr>
       }
    </table>
</section>
<div id="stopka">
    <p>Stronę wykonał: Aloyzy Gąbka</p>
</div>
</body>
</html>