@model List<Student>
@{
    ViewData["Title"] = "Home Page";
}

<h3>Lista studentów</h3>
<div>
    <table class="table table-striped">
        <tr>
            <th>Lp</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Wiek</th>
            <td></td>
        </tr>
        @{
            int lp = 0;
        }
        @foreach (var s in Model) {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Age</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@s.Id">Szczegóły informacji</a>
                </td>
            </tr>
        }
    </table>
</div>

