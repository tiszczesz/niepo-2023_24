@model List<Book>;
@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <tr>       
        <th>Tytuł</th>
        <th>Autor</th>
        <th>Cena</th>
        <th>----</th>
    </tr>
    @foreach(var b in Model){
        <tr>
            <td>@b.Title</td>
            <td>@b.Author</td>
            <td>@b.Price</td>
            <td><a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-danger">Usuń</a></td>
        </tr>
    }
</table>
