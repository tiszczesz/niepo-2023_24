@page
@model MyApp.Namespace.IndexModel

@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>Strona Index</h1>
        <div>
            <select>
                @foreach(var c in Model.Colors){
                    <option>@c</option>
                }
            </select>
            <h4 class="bg-light">@ViewData["info"]</h4>
        </div>
        <hr>
        <form>

            <input type="text" class="m-2" placeholder="Podaj imie" name="firstname"/><br />
            <input type="text" class="m-2" placeholder="Podaj nazwisko" name="lastname"/><br />
            <input type="number" class="m-2" placeholder="Podaj wiek" name="age"/><br />
            <input type="submit" class="m-2" value="Zapisz" name="submit"/>
        </form>
        
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Informacje zwrotne</h2>
                <div>
                    @ViewData["result"]
                </div>
            </div>
            
        </div>
    </div>
    <div>
        <a asp-page="Pages2">Ćwiczenie 1</a>
    </div>
</body>

</html>
